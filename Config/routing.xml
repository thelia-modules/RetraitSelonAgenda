<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="retraitselonagenda.configure" path="/admin/module/retraitselonagenda/configure" methods="post">
        <default key="_controller">RetraitSelonAgenda\Controller\ConfigurationController::configure</default>
    </route>

    <route id="retraitselonagenda.clearcache" path="/admin/module/retraitselonagenda/clear-cache">
        <default key="_controller">RetraitSelonAgenda\Controller\ConfigurationController::clearCache</default>
    </route>

    <route id="retraitselonagenda.callback" path="/retraitselonagenda/oauthcallback">
        <default key="_controller">RetraitSelonAgenda\Controller\OAuthCallbackController::oauthCallback</default>
    </route>
</routes>
